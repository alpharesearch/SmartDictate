[*.cs]
# --- Core settings for expanding blocks and statements ---

# Put open braces on a new line for everything
csharp_new_line_before_open_brace = all

# Don't try to keep braced blocks on a single line, even if they are short
csharp_preserve_single_line_blocks = false

# Ensure 'else', 'catch', 'finally' are on new lines
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true

# --- Optional but recommended for consistency ---

# Always add braces for control flow statements (if, else, for, while, etc.)
# This helps the above rules apply consistently.
csharp_prefer_braces = always:suggestion # or :warning or :error to be stricter

# --- Standard indentation and whitespace ---
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf # or crlf
insert_final_newline = true
trim_trailing_whitespace = true

# --- Example Spacing (these also contribute to readability and line separation) ---
csharp_space_after_comma = true
csharp_space_before_comma = false
csharp_space_after_keywords_in_control_flow_statements = true # e.g., if (condition)
csharp_space_around_binary_operators = before_and_after     # e.g., x + y